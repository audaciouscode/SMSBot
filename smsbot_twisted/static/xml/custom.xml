<div id="broadcasts">
	<div id="function-name">Custom Scripts</div>
	<div id="function-body">
		<table cellspacing="0" id="body">
			<tr>
				<td class="list">
					<div id="script-list">
						<select id="all-scripts" multiple="true">
							<option>Loading...</option>
						</select>
					</div>
				</td>
				<td>
					<div class="edit-item" style="display: hidden;">
						<div class="field-label">Name</div>
						<div class="field-value"><input type="text" id="name" placeholder="Broadcast Name" /></div>
						<div class="field-label">Voice XML (English)</div>
						<div class="field-value">
							<textarea id="vxml_script" cols="54" rows="12" wrap="off"></textarea><br />
						</div>

						<div class="field-label">Voice XML (Spanish)</div>
						<div class="field-value">
							<textarea id="vxml_script_spanish" cols="54" rows="12" wrap="off"></textarea><br />
						</div>
					
						<input type="hidden" id="script_id" />
					</div>
					<div class="select-item">
						<p>Please select a script.</p>
					</div>
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<button class="add-new"> Add </button><button class="remove-selected"> Remove </button> <button class="save"> Save Script </button>
				</td>
			</tr>
		</table>
	</div>
</div>