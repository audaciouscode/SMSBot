<div id="send-message">
	<div id="function-name">Send Message</div>
	<div id="function-body">
		<table cellspacing="0">
			<tr>
				<td class="list">
					<div id="participant-list">
						<select id="all-participants" multiple="true">
							<option>Loading...</option>
						</select>
					</div>
				</td>
				<td>
					<div class="edit-item">
						<div class="field-label">Mobile Number</div>
						<div class="field-value"><input type="text" id="send_number" placeholder="(555) 555-5555" /></div>
						<div class="field-label">Message</div>
						<div class="field-value">
							<textarea id="send_message" cols="54" rows="6"></textarea><br />
							<span class="okay tip" id="send_message_count">Loading...</span>
						</div>

						<button id="send-message"> Send Message </button>
					</div>
				</td>
			</tr>
		</table>
	</div>
</div>