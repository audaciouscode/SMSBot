<?xml version="1.0" encoding="utf-8"?>
<vxml version="1.0" xmlns:smsbot="http://www.audacious-software.com/smsbot">
	<form id="tip">
		<field name="ready" smsbot:variable="ready">
			<prompt>It's time to answer a few questions about how you are feeling. REPLY 1 TO CONTINUE</prompt>
			<grammar>1</grammar>
			<grammar>(re:)1</grammar>
		</field>
		<field name="kneepain" smsbot:variable="kneepain">
			<prompt>Rate the knee pain you are having right now: 0=NO PAIN 10=WORST POSSIBLE</prompt>
			<grammar>(re:)0</grammar>
			<grammar>(re:)1</grammar>
			<grammar>(re:)2</grammar>
			<grammar>(re:)3</grammar>
			<grammar>(re:)4</grammar>
			<grammar>(re:)5</grammar>
			<grammar>(re:)6</grammar>
			<grammar>(re:)7</grammar>
			<grammar>(re:)8</grammar>
			<grammar>(re:)9</grammar>
			<grammar>(re:)10</grammar>
			<grammar>0</grammar>
			<grammar>1</grammar>
			<grammar>2</grammar>
			<grammar>3</grammar>
			<grammar>4</grammar>
			<grammar>5</grammar>
			<grammar>6</grammar>
			<grammar>7</grammar>
			<grammar>8</grammar>
			<grammar>9</grammar>
			<grammar>10</grammar>
		</field>
		<field name="physacti" smsbot:variable="physacti">
			<prompt>Rate your physical activity over the past 2 hours: 0=NO ACTIVITY 10=MAX EXERTION</prompt>
			<grammar>(re:)0</grammar>
			<grammar>(re:)1</grammar>
			<grammar>(re:)2</grammar>
			<grammar>(re:)3</grammar>
			<grammar>(re:)4</grammar>
			<grammar>(re:)5</grammar>
			<grammar>(re:)6</grammar>
			<grammar>(re:)7</grammar>
			<grammar>(re:)8</grammar>
			<grammar>(re:)9</grammar>
			<grammar>(re:)10</grammar>
			<grammar>0</grammar>
			<grammar>1</grammar>
			<grammar>2</grammar>
			<grammar>3</grammar>
			<grammar>4</grammar>
			<grammar>5</grammar>
			<grammar>6</grammar>
			<grammar>7</grammar>
			<grammar>8</grammar>
			<grammar>9</grammar>
			<grammar>10</grammar>
		</field>
		<field name="medication" smsbot:variable="medication">
			<prompt>Have you taken any knee pain medication since we last asked? 1=YES 2=NO </prompt>
			<grammar>(re:)1</grammar>
			<grammar>(re:)2</grammar>
			<grammar>1</grammar>
			<grammar>2</grammar>
			<filled>Thank you for completing this survey!</filled>
		</field>
	</form>
</vxml>